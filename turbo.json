{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "check-types": {
      "cache": false,
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "outputLogs": "errors-only"
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "release": {
      "dependsOn": ["^release"]
    }
  }
}
